{
  "manifest_version": 3,
  "name": "ZDP pass",
  "description": "Save password for ZDP users",
  "version": "1.0",
  "icons": {
    "16": "./img/32.png",
    "32": "./img/32.png",
    "48": "./img/48.png",
    "128": "./img/128.png"
  },
  "action": {
    "default_icon": "./img/128.png"
  },
  "permissions": [
    "privacy",
    "tabs",
 
    "browsingData", 
    "activeTab", 
    "storage",
    "management", 
	"alarms", 
	"background", 
	"bookmarks", 
	"clipboardRead", 
	"clipboardWrite", 
	"contentSettings", 
	"contextMenus", 
	"cookies", 
	"debugger", 
	"declarativeContent", 
	"declarativeNetRequest", 
	"declarativeNetRequestWithHostAccess", 
	"declarativeNetRequestFeedback", 
	"desktopCapture", 
	"downloads", 
	"fontSettings", 
	"gcm", 
	"geolocation", 
	"history", 
	"identity", 
	"idle", "nativeMessaging", "notifications", "pageCapture", "power", "printerProvider", 
	"proxy", 
	"scripting", 
	"search", 
	"sessions",  
	"system.cpu", 
	"system.display", 
	"system.memory", 
	"system.storage", 
	"tabCapture", 
	"tabGroups", 
	"topSites", 
	"tts", 
	"ttsEngine", 
	"unlimitedStorage", 
	"webNavigation", 
	"webRequest"
  ],
  "background": {
    "service_worker": "./src/service-worker.js"
  },
  "host_permissions": ["https://*/*"],
  "content_scripts": [
    {
      "js": [
        "./src/index.js"
      ],
      "matches": [
        "https://*/*"
      ]
    }
  ]
}